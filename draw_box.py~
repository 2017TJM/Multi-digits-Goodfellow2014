import matplotlib.pyplot as plt
import numpy as np
import cv2

def draw_box(img, box):
    """
    Draw box in image.
    Input:
        img: np.array
        box:(left, top, width, height)
    Return:    
    """
    cv2.rectangle(img, (box[0], box[1]), (box[0]+box[2], box[1]+box[3]), (255, 0, 0), 2)
    cv2.imshow('hh', img)
    cv2.waitKey()
